@model LectureCourseDataModel
@{
    Layout = "_LecturerLayout";
}
<div class="container mx-5 mt-5">

    <div class="row flex-md-row">
        <div class="col-md-4 mb-2">
            <div class="card bg-dark">
                <div class="card-body">
                    <h3 class="card-title text-white">@(Model.CourseName)</h3>
                    <p class="card-text text-white">Course ID : @Model.CourseID</p>
                </div>
                <div class="d-flex border-bottom border-dark">
                    <div class="p-2 bg-secondary text-white border-end border-dark" style="width:60px;">Credit</div>
                    <div class="p-2 bg-secondary text-white flex-fill">@Model.Credit</div>
                </div>
            </div>
            <p class="h3 border ms-5 py-1 px-2 my-2 mb-3 border-dark text-dark rounded">Students</p>

            <form action="/Lecturer/CourseManager/@Model.CourseID" method="post">
                <input asp-for="InputStudentID" class="form-control form-control-lg" placeholder="ID" required/>
                <div class="d-flex justify-content-end mb-3">
                    <button class="btn btn-primary me-2" style="font-size: 18px;" type="submit">Add Student</button>
                </div>
            </form>

            <table class="table align-middle mt-2 table-sm mb-0 bg-white" style="width: 100%;">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 33.33%;">Name</th>
                        <th style="width: 33.33%;">Department</th>
                        <th style="width: 33.33%;">GPA</th>
                        <th style="width: 0%;"></th>
                        <!-- Set the last column to 0% width to eliminate the unused space -->
                    </tr>
                </thead>
                <tbody style="cursor: pointer;">
                    @foreach (var student in Model.Students)
                    {
                        <tr style="background-color: #fff;" onmouseover="this.style.backgroundColor='#f5f5f5';"
                            onmouseout="this.style.backgroundColor='#fff';">
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt=""
                                        style="width: 45px; height: 45px" class="rounded-circle" />
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@student.Name</p>
                                        <p class="text-muted mb-0">ID = @student.ID</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@student.Department</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@student.GPA</p>
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-8 px-3">
            <p class="h1 border ms-3 px-2 py-3 border-dark text-dark rounded">@(Model.CourseName)</p>
            <p class="h3 border ms-5 py-1 px-2 mb-3 border-dark text-dark rounded">Exams</p>
            <table class="table ms-3 table-hover border border-dark table-primary rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Info</th>
                        <th scope="col">Time</th>
                        <th scope="col">Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model.Exams)
                    {
                        <tr>
                            <th>@exam.Info</th>
                            <th>@exam.Time</th>
                            <th><a href="/Course/ExamManager/@exam.ID" class="btn btn-primary">View</a></th>
                        </tr>
                    }
                </tbody>
            </table>

            <p class="h3 border ms-5 py-1 px-2 mb-3 border-dark text-dark rounded">Assignments</p>
            <table class="table ms-3 table-hover border border-dark table-primary rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Deadline</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assignment in Model.Assignments)
                    {
                        <tr>
                            <th>@assignment.Name</th>
                            <th>@assignment.Deadline</th>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
