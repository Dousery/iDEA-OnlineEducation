@model IList<StudentExamDataModel>
@{
    Layout = "_LecturerLayout";
}

<div class="container">
    <h1 style="text-align: center; margin-top: 20px; color:rgb(255, 255, 255); font-weight: bold;">Exam List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table align-middle mt-2 table-sm mb-0 bg-white" style="width: 100%;">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 33.33%;">Name</th>
                        <th style="width: 33.33%;">Exam</th>
                        <th style="width: 33.33%;">Grade</th>
                        <th style="width: 0%;"></th> <!-- Set the last column to 0% width to eliminate the unused space -->
                    </tr>
                </thead>
                <tbody style="cursor: pointer;">
                    @foreach (var exam in Model) {
                        <tr style="background-color: #fff;" onmouseover="this.style.backgroundColor='#f5f5f5';"
                            onmouseout="this.style.backgroundColor='#fff';">
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt=""
                                        style="width: 45px; height: 45px" class="rounded-circle" />
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">@exam.StudentName</p>
                                        <p class="text-muted mb-0">ID = @exam.StudentID</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@exam.ExamName</p>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">@exam.Point</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
